<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="350dp"
        android:layout_height="475dp"
        android:background="@drawable/popup_background"
        android:layout_gravity="center"
        android:padding="5pt">

    <TextView
            android:text="INFORMATION ABOUT POLLUTANTS"
            android:layout_width="189dp"
            android:layout_height="49dp"
            android:id="@+id/textView2"
            android:textSize="50px"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="112dp"
            android:layout_marginStart="112dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="106dp"
            android:layout_marginRight="106dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:gravity="center_horizontal"/>

    <TextView
            android:text="The pollutants that the app describes are CO(carbon monoxide)
which originates from incomplete combustion of carbon fuels (in car engines), NO2(nitrogen dioxide)
which originates from fuel burning processes, such as those used in industry, O3(ozone)
which is one of the major components of photochemical smog, PM10 and PM2.5(Fine particulate matter),
whose main sources being combustion processes, mechanical processes  and biological particles"
            app:autoSizeTextType="uniform"
            android:layout_width="285dp"
            android:layout_height="151dp" android:id="@+id/textView10"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"/>

    <ImageView
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/air"
            android:layout_width="178dp"
            android:layout_height="105dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="96dp" android:layout_marginStart="96dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="90dp" android:layout_marginRight="90dp"
            app:layout_constraintHorizontal_bias="0.714">
    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>