<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/welcome"
        android:background="@drawable/background" >

    <TextView
            android:id="@+id/not_member"
            android:text="@string/you_are_not_a_member"
            android:textColor="@color/black"
            android:layout_width="156dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="@string/register"
            android:textColor="@color/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register" android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/not_member"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="@string/welcome"
            android:textSize="@android:dimen/app_icon_size"
            android:textColor="@color/white"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/welcome_text" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/nice_to_see_you_again"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:id="@+id/nice" android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="30dp"
            android:alpha="0.85"
            android:layout_marginStart="70dp" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/welcome_text"/>
    <Button
            android:text="@string/login"
            android:textColor="@color/white"
            android:background="@drawable/button_login_welcome"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_login" android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="60dp"
            android:layout_marginStart="80dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/nice"/>


