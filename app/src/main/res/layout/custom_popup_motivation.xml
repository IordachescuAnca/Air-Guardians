         android:layout_marginRight="24dp"/>

 <ImageView
         android:layout_alignParentRight="true"
         app:srcCompat="@drawable/motivation2"
         android:layout_width="228dp"
         android:layout_height="127dp" android:layout_marginTop="24dp"
         app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintStart_toStartOf="parent"
         android:layout_marginLeft="96dp" android:layout_marginStart="96dp" app:layout_constraintEnd_toEndOf="parent"
